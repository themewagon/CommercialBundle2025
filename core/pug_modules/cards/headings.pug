//- Declaration
mixin heading(content, settings)
	//- setting default values
	- settings = (settings || '')
	div.heading(class=settings.class)
		h1= content.title
		p(class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2')= content.subtitle
		
		
		if content.buttons
			.clearfix
			+buttons(content.buttons)




//- Declaration
mixin heading__section(content, settings)
	//- setting default values
	- settings = (settings || '')
	div.heading(class=settings.class)
		h2= content.title
		h6= content.subtitle
		
		
		if content.buttons
			+buttons(content.buttons)