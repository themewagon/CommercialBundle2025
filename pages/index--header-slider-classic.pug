extends ../pug_modules/skeleton

block append styles
	link(href="assets/lib/lightbox2/dist/css/lightbox.css" rel="stylesheet")
	link(href="assets/lib/flexslider/flexslider.css" rel="stylesheet")

block append scripts
	script(src='assets/lib/lightbox2/dist/js/lightbox.js')
	script(src='assets/lib/flexslider/jquery.flexslider-min.js')

block append content

	+navigation

	
	.flexslider.flexslider-simple.h-classic-box.parallax
		ul.slides
			li(data-zanim-timeline!={})
				+flexheader("main-header-3", ["The", "Hideaway", "Inn"], "h-classic-box")
			li(data-zanim-timeline!={})
				+flexheader("main-header-1", ["Live", "Wonderful", "life"], "h-classic-box")
			li(data-zanim-timeline!={})
				+flexheader("main-header-2", ["Perfect", "Vacation", "Place"], "h-classic-box")

	+home
						
	+footer