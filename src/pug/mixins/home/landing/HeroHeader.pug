mixin HeroHeader
  +Section(gradient,"container-fluid ").position-relative.py-0.overflow-hidden
    +Background(background)
      .container.overflow-hidden.text-center.z-index-1.banner-section.px-0
        .outside-line.mx-auto.mb-5.mb-lg-7
          img.img-fluid(src=`${CWD}assets/img/ThemeWagon-logo.svg`  alt="")
        .row.align-items-center.justify-content-center.justify-content-xl-between.gx-2.gy-4
          .col-12.col-xl-auto.px-0
            img.img-fluid(src=`${CWD}assets/img/50-text.svg`, alt="")
          .col-auto.px-0.text-container.text-xl-start
            p.text-100.lh-1.sub-heading Commercial Bundle 2025
            h1.text-100.fw-bold.font-sans-serif.title.lh-f2.text-nowrap.mb-0 ADMIN & eCOM
              br
              span.extra-large-text  TEMPLATES
        h2.fw-normal.text-white.text-center.font-base.mb-4.mb-md-6.mb-lg-8.powered-by Powered by Material UI, Bootstrap & more!

        

        a(href="https://themewagon.com/themes/creative-bundle-2024/" target="_blank" ).text-white.btn.btn-success.fw-normal.mb-8
          i.fas.fa-download.me-3
          | Download BUNDLE
    .position-absolute.bottom-0.start-0.end-0.z-n1
      img.img-fluid.w-100(src=`${CWD}assets/img/bottom_bar.png`, alt="")






