    var gradient={
      "className":" bottom-0",

      attrs:{
        style:'background-image:linear-gradient(90deg, #FFFFFF -11.17%, #FFFFFF 110.39%);' 
      }
    }
    var background={
        "image":`${CWD}assets/img/header-bg.webp`,
