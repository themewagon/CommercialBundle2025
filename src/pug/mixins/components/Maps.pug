mixin StreetViewExample
  h5.mt-5 Example of street view
  .googlemap.min-vh-50(data-gmap data-latlng='48.8588723,2.2932638' data-pov!={heading: 120, pitch: 0} data-scrollwheel='false' data-icon=`${CWD}assets/images/map-marker.png`, data-zoom='1' data-theme='streetview')
      .marker-content.py-3
  h5.mt-5 HTML
  pre
    code.lang-html.
      #{"<div data-latlng='48.8588723,2.2932638' data-pov='{heading:120,pitch:0}' data-scrollwheel='false' data-icon='../assets/images/map-marker.png' data-zoom='1' data-theme='streetview' class='googlemap h-full'></div>"}