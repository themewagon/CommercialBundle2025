mixin MapBasicExample 
  .googlemap(data-gmap data-latlng='41.8333925,-88.0123393' data-scrollwheel='false', data-icon=`${CWD}assets/images/map-marker.png`, data-zoom='15' data-theme='Default' style="min-height:300px")
      .marker-content.py-3
        h5 Tooltip title
        p
          | A nice description about your place
          br
          |  Customize it as you want.

mixin BasicMapExampleJavascript 
  h5.mt-5 JavaScript
  +ComponentCardLib
    script(src!="https:maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async)
  a(href='https://developers.google.com/maps/documentation/javascript/get-api-key' target='_blank').font-sans-serif Get your API key
    span.d-inline-block.ms-1 &xrarr;

