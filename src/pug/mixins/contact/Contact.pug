      input.form-control(type="hidden" name="to" value='user@domain.extension')
      input.form-control(type="text" placeholder="Your Name" required)
    .col-12.mt-4
      input.form-control(type="email" placeholder="Email" required)
    .col-12.mt-4 
      textarea.form-control(name="message" rows='6' placeholder="Enter your description here" required)
    .col-12.mt-4
      .row 
        .col-aut 
          button.btn.btn-primary(type="submit") Send now
        .col  
          .feedback.col-12.mt-3

