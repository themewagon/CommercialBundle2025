mixin HeroSection(config)
  +Section({image: `${CWD}${config.image}`, className: 'overlay overlay-1', attrs: {"data-parallax":"data-parallax", "data-rellax-speed": '-3'}},container).has-parallax.py-0
    .row.align-items-center.justify-content-center.text-center.pt-8.pb-6.vh-50(data-zanim-timeline!={} data-zanim-trigger!='scroll' style="min-height: 300px;") 
      .col
        .overflow-hidden
          h1.fs-4.fs-lg-2.text-white(data-zanim-xs!={delay:0.8})= config.title